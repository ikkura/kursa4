<Window x:Class="regtr.sell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:regtr"
        mc:Ignorable="d"
        Title="sell" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontSize="40" Grid.ColumnSpan="3" Grid.Column="0">
            Подтверждение покупки

        </TextBlock>

        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Grid.ColumnSpan="3" FontSize="15" Grid.Column="0" Height="40" Width="200" Name="manganame">

        </TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="2" Height="40" FontSize="15" Width="200" Name="mangaprice">

        </TextBlock>

        <Button Height="40" Width="160" Grid.Column="1" Grid.Row="2" Click="Button_Click">Подтвердить


        </Button>





    </Grid>
</Window>
